<p class="centered clearfix text">Whether you want to hire us, give us an idea or submit a bug, feel free to contact us any time.</p><hr /><form action="{{current_url}}" accept-charset="{{charset}}" method="POST" class="fancy">	<div class="push-1 span-10">		<label for="name" class="span-3">Your name</label>		<input type="text" name="name" id="name" value="{{#values}}{{name}}{{/values}}" class="span-7" />		{{#errors}}			{{#name}}			<label class="lolz" for="name">{{name}}</label>			{{/name}}		{{/errors}}	</div>	<div class="push-3 span-10 last">		<label for="email" class="span-3">Your email</label>		<input type="email" name="email" id="email" value="{{#values}}{{email}}{{/values}}" class="span-7" />		{{#errors}}			{{#email}}			<label class="lolz" for="email">{{email}}</label>			{{/email}}		{{/errors}}	</div>	<hr />	<div class="clearfix push-1">		<label for="message_text">Message</label>		<br />		<textarea name="content" id="message_text" class="span-22" style="height:120px;">{{#values}}{{content}}{{/values}}</textarea>		{{#errors}}			{{#content}}			<label class="lolz" for="message_text">{{content}}</label>			{{/content}}		{{/errors}}	</div>	<div class="clearfix span-22 push-1">		<input type="hidden" name="token" value="{{#values}}{{token}}{{/values}}" />		<button class="positive right" type="submit">			<img src="/media/ico/tick.png" alt="" /> Send		</button>	</div></form><script type="text/javascript">$(function(){	});</script>