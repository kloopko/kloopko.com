{{#values}}<form action="{{current_url}}" accept-charset="{{charset}}" method="POST" class="fancy">	<div class="push-1 span-11">		<label for="name" class="span-3">Your name</label>		<input type="text" name="name" id="name" value="{{name}}" class="span-7" />	</div>	<div class="pull-1 span-11 right last">		<label for="email" class="span-3">Your email</label>		<input type="email" name="email" id="email" value="{{email}}" class="span-7" />	</div>	<hr />	<div class="clearfix push-1">		<label for="message_text">Message</label>		<br />		<textarea name="content" id="message_text" class="span-22" style="height:120px;">{{content}}</textarea>	</div>	<div class="clearfix span-22 push-1">		<input type="hidden" name="token" value="{{token}}" />		<button class="positive right" type="submit">			<img src="/assets/ico/tick.png" alt="" /> Send		</button>	</div></form><script type="text/javascript">$(function(){	var name_value = '{{name}}',		mail_value = '{{email}}';		if ( ! name_value) {		$('#name').focus();	}	else if ( ! mail_value) {		$('#email').focus();	}	else {		$('#message_text').focus();	}});</script>{{/values}}